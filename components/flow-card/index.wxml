<!-- index.wxml -->
<view class="container">
  <image mode="widthFix" src="{{data.cover_img}}" class="img"></image>
  <view class="content-container">
    <text class="title">{{data.title}} </text>
    <view class="tags">
      <block wx:for="{{tags}}" wx:key="id">
        <l-tag l-class="l-tag">{{item}}</l-tag>
      </block>
    </view>
    <text class="subtitle">{{data.intro}}</text>
  </view>
</view>
