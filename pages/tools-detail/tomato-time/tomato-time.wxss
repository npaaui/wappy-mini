/* pages/tools-detail/tomato-time/tomato-time.wxss */
page {
  background: rgb(255, 255, 255);
}

/* header */
.tools-header {
  width: 100%;
  margin-top: 100rpx; 
  display: flex;
  align-items: center;
  flex-direction: column;
}

.tools-header .title1 {
  width: 400rpx;
  height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.8);
}

.tools-header .title2 {
  width: 400rpx;
  height: 100rpx;
  font-size: 28rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.6);
}

/* center */
.tools-center {
  width: 600rpx;
  height: 600rpx;
  margin: 50rpx 75rpx;
}

.tools-center .tool {
  width: 200rpx;
  height: 200rpx;
  float: left;
}

.tools-center .tool .tool-img {
  width: 80rpx;
  height: 80rpx;
  margin: 30rpx 60rpx 0rpx;
}

.tools-center .tool .tool-title {
  display: block;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
}



