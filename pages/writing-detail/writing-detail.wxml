<view wx:if="{{writingData}}">
    <view class="cover-container">
        <image src="{{writingData.img}}"></image>
    </view>

    <view class="writing-meta">
        <view class="meta-info">
            <text class="writing-name">{{writingData.name}}</text>
            <text class="other-meta">by.{{writingData.user_name}} · {{writingData.zan}} 人赞过</text>
        </view>
    </view>

    <view class="writing-intro" wx:if="{{writingData.name}}">
        <view class="intro-header"><text>简介</text></view>
        <text class="intro-content">{{writingData.remark}}</text>
    </view>
    <view class="steps" wx:if="{{true}}">
      <block wx:for="{{writingData.step}}" wx:key="id">
        <view class="list-item" data-bid="{{item.id}}">
          <view class="index-list-item">
            <view class="title">
                Step{{item.step}}:
            </view>
            <view class="cover">
              <image class="cover-img" src="{{item.img}}"  mode="widthFix"></image>
            </view>
            <view class="content">
                {{item.content}}
            </view>
          </view>
        </view>
      </block>
    </view>
</view>
<view class='end'>
- End -
</view>

<loading hidden="{{loadidngHidden}}">
    加载中...
</loading>