page {
    background: rgb(255, 255, 255);
}
.cover-container {
    background: rgb(255, 255, 255);
    text-align: center;
}
.cover-container image {
    display: inline-block;
    width: 100%;
    border-radius: 0 0 20rpx 20rpx;
}

.writing-meta {
  position: relative;
  padding: 30rpx;
  overflow: hidden;
}

.writing-meta .meta-info {
  margin: 0;
}
.meta-info text {
  width: 100%;
  display: block;
  text-align: center;
}
.writing-name {
    font-weight: 500;
    font-size: 50rpx;
    color: #444444;
}
.other-meta {
    padding-top: 20rpx;
    color: #888;
    font-size: 26rpx;
}

.writing-intro {
    padding: 40rpx;
    background: #FAFAFA;
}
.writing-intro .intro-header {
    color: #444;
    font-size: 35rpx;
    font-weight: bold;
    padding: 20rpx 0;
}
.writing-intro .intro-content {
    font-size: 30rpx;
    line-height: 2;
    text-align: justify;
    color: #555;
}


/*common list*/
.list-item {
  position: relative;
  overflow: hidden
}

/*index list*/
.index-list-item {
  background: #FFF;
  padding: 15rpx 30rpx;
  overflow: hidden;
  border-top: 1px solid rgb(240, 240, 240);
}
.index-list-item:active {
  background: #EEE;
}
.index-list-item .title {
  margin: 20rpx 0;
  display: inline-block;
  width: 100rpx;
  height: 50rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #ee9c0d;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
}
.index-list-item .cover {
  display: block;
  padding: 10rpx 20rpx;
  width: 100%;
  overflow: hidden
}
.index-list-item .cover image.cover-img {
  width: 95%;
  border-radius: 20rpx;
}
.index-list-item .content {
  display: block;
  width: 100%rpx;
  padding: 5rpx 20rpx;
  font-size: 30rpx;
  color: #444;
}

.end {
  width:100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #999;
}